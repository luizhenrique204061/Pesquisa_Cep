<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    style="@style/CARDVIEWBACKGROUND"
    android:layout_marginVertical="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="30dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resposta_cep"
            android:text="Cep"
            style="@style/COR_DO_TEXTO"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/resposta_nome_rua"
            android:text="Logradouro"
            android:textSize="15dp"
            style="@style/COR_DO_TEXTO"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/resposta_bairro"
            android:text="Bairro"
            android:textSize="15dp"
            style="@style/COR_DO_TEXTO"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/resposta_cidade"
            android:text="Cidade"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            style="@style/COR_DO_TEXTO"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/resposta_estado"
            android:text="Estado"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            style="@style/COR_DO_TEXTO"
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/resposta_ddd"
            android:text="DDD"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            style="@style/COR_DO_TEXTO"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

